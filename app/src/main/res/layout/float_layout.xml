<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/alert_window_imagebtn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_float01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_dialog_perclick"
            android:orientation="horizontal">

            <View
                android:id="@+id/float_view"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:background="@drawable/selector_dialog"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_float02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_listview"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp10">

            <ListView
                android:id="@+id/float_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
